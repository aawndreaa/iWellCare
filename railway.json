{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["php82", "php82Packages.composer", "nginx"]
        }
      }
    },
    "buildCommand": "chmod +x railway-build.sh && ./railway-build.sh"
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && nginx -g 'daemon off;'",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {}
  }
}